@using SquishIt.Mvc
@{
    string suffixText = "Cinteros Spring Conf 2012 Lab by Seb Nilsson";
    string viewBagTitle = Convert.ToString(ViewBag.Title ?? string.Empty);
    bool hasPrefixText = !string.IsNullOrWhiteSpace(viewBagTitle);

    string pageTitle = (hasPrefixText) ? string.Format("{0} - {1}", viewBagTitle, suffixText) : suffixText;
}
<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
    <title>@pageTitle</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    
    <script>document.documentElement.className = 'js';</script>

    @(Html.BundleCss()
        .Add("~/content/normalize.css")
        .Add("~/content/Site.css")
        .MvcRender("~/bundled-style.css"))
</head>
<body>
    <div id="main-wrapper">
        @*<nav>
            <ul>
                <li>@Html.ActionLink("Lists and collections", "")</li>
            </ul>
        </nav>*@
        <div id="content"></div>
        @RenderBody()
    </div>

    @(Html.BundleJavaScript()
        .Add("~/Scripts/jquery-1.7.2.js")
        .Add("~/Scripts/knockout-2.1.0.debug.js")
        .Add("~/Scripts/jquery.signalR-0.5.0.js")
        .Add("~/Content/Site.js")
        .MvcRender("~/bundled-scripts.js"))
    <script src="~/signalr/hubs" type="text/javascript"></script>
</body>
</html>
